<div class="page-header">
  <h3>Neighborhood #<%= @neighborhood.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @neighborhood.name %></dd>

      <dt>City</dt>
      <dd><%= @neighborhood.city %></dd>

    </dl>

      <dt>Venues</dt>
      <dd>
      <ul class="list-group">
        <% Venue.where(:neighborhood_id => @neighborhood.id).each do |venues| %>
        <li class="list-group-item">
          <%= venues.name %>
        </li>
        <% end %>
      </ul>
      </dd>


<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Neighborhood</dt>
      <dd><%= @neighborhood.username %></dd>
      <dt>Favorites</dt>
      <dd><ul class="list-group">
      <% @neighborhood.favorites.each do |favorite| %>
      <li classs="list-group-item">
      <%= favorite.neighborhood.name %> at <%= favorite.neighborhood.city %>
      </li>
      <% end %>
      </ul>
      </dd>
      </dl>
      </div>

    <div class="btn-group btn-group-justified">
      <a href="/neighborhoods" class="btn btn-primary">
        Back
      </a>
      <a href="/neighborhoods/<%= @neighborhood.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_neighborhood/<%= @neighborhood.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
